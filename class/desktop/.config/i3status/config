general {
        colors = true
        interval = 1
}

order += "disk /"
order += "load"
order += "volume master"
order += "time"

time {
	format = "%Y-%m-%d %H:%M:%S"
}

volume master {
	format = "♪: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

cpu_temperature 0 {
	format = "T: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
}

load {
	format = "Load average: %1min %5min %15min"
}

disk "/" {
	format = "%free"
}

